<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/news_view_holder_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        android:elevation="2dp"
        card_view:contentPadding="4dp"
        card_view:cardCornerRadius="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/news_view_holder_card_view_image"
                android:layout_width="match_parent"
                android:layout_height="96dp" />
            <TextView
                android:id="@+id/news_view_holder_card_view_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/news_view_holder_card_view_image"
                />
            <TextView
                android:id="@+id/news_view_holder_card_view_short_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/news_view_holder_card_view_title"
                />

            <TextView
                android:id="@+id/news_view_holder_source"
                android:layout_below="@id/news_view_holder_card_view_short_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/news_view_holder_publish_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/news_view_holder_source"/>

            <ImageView
                android:id="@+id/news_view_holder_fav_image_holder"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/news_view_holder_publish_date"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>